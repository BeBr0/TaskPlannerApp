<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Dark_MainScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textViewStyle">@style/Dark_TaskTextView</item>
        <item name="android:background">@color/dark_main</item>

        <item name="android:toolbarStyle">@style/Dark_Toolbar</item>
        <item name="checkedTextViewStyle">@style/Dark_ToolbarTitle</item>
    </style>

    <style name="Dark_TaskTextView">
        <item name="android:textColor">@color/dark_secondary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Dark_EditTaskScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="editTextStyle">@style/Dark_EditText</item>
        <item name="buttonStyle">@style/Dark_Button</item>
        <item name="android:textViewStyle">@style/Dark_TaskEditTextView</item>
        <item name="android:background">@color/dark_main</item>
        <item name="android:timePickerDialogTheme">@style/Dark_DateAndTimePickers</item>
        <item name="android:datePickerDialogTheme">@style/Dark_DateAndTimePickers</item>

        <item name="android:toolbarStyle">@style/Dark_Toolbar</item>
        <item name="checkedTextViewStyle">@style/Dark_ToolbarTitle</item>
    </style>

    <style name="Dark_DateAndTimePickers">
        <item name="android:textColor">@color/dark_main</item>
        <item name="android:background">@color/light_secondary</item>
    </style>

    <style name="Dark_TaskEditTextView">
        <item name="android:textColor">@color/dark_secondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dark_EditText">
        <item name="android:textColor">@color/dark_secondary</item>
        <item name="background">@drawable/form_item_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/dark_secondary</item>
    </style>

    <style name="Dark_Button">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textColor">@color/dark_main</item>
    </style>

    <!--Toolbar style-->

    <style name="Dark_Toolbar">
        <item name="android:background">@color/dark_secondary</item>
    </style>

    <style name="Dark_ToolbarTitle">
        <item name="android:textColor">@color/dark_main</item>
    </style>
</resources>