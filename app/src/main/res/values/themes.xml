<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Light_MainScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textViewStyle">@style/Light_TaskTextView</item>
        <item name="android:background">@color/light_main</item>

        <item name="android:toolbarStyle">@style/Light_Toolbar</item>
        <item name="checkedTextViewStyle">@style/Light_ToolbarTitle</item>
    </style>

    <style name="Light_TaskTextView">
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Light_EditTaskScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="editTextStyle">@style/Light_EditText</item>
        <item name="android:background">@color/light_main</item>
        <item name="buttonStyle">@style/Light_Button</item>
        <item name="android:textViewStyle">@style/Light_TaskEditTextView</item>

        <item name="android:toolbarStyle">@style/Light_Toolbar</item>
        <item name="checkedTextViewStyle">@style/Light_ToolbarTitle</item>
    </style>

    <style name="Light_TaskEditTextView">
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Light_EditText">
        <item name="android:textColor">@color/light_secondary</item>
        <item name="background">@drawable/form_item_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/light_secondary</item>
    </style>

    <style name="Light_Button">
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textColor">@color/light_main</item>
    </style>

    <!--Toolbar style-->

    <style name="Light_Toolbar">
        <item name="android:background">@color/light_secondary</item>
    </style>

    <style name="Light_ToolbarTitle">
        <item name="android:textColor">@color/light_main</item>
    </style>
</resources>