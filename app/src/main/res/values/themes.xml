<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="Theme_Base_Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->

        <item name="android:background">@color/light_main</item>
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textColorHint">@color/light_secondary</item>
        <item name="android:editTextStyle">@style/Theme_edit_form_light</item>
        <item name="android:textViewStyle">@style/Theme_text_form_light</item>
        <item name="android:toolbarStyle">@style/Theme_toolBar_light</item>
        <item name="checkedTextViewStyle">@style/Theme_toolbar_title_light</item>
    </style>

    <style name="Theme_toolBar_light">
        <item name="android:background">@color/light_secondary</item>
    </style>

    <style name="Theme_toolbar_title_light">
        <item name="android:textColor">@color/light_main</item>
    </style>

    <style name="Theme_buttonStyle_light">
        <item name="android:background">@color/light_secondary</item>
        <item name="android:textColor">@color/light_main</item>
    </style>

    <style name="Theme_separate_line_light">
        <item name="android:background">@color/light_secondary</item>
    </style>

    <style name="Theme_text_form_light">
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme_edit_form_light">
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>