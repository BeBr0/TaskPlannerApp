<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskPlanner.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->

        <item name="background">@color/light_main</item>
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textColorHint">@color/light_secondary</item>
    </style>

    <style name="Theme_toolBar">
        <item name="android:background">@color/light_secondary</item>
        <item name="android:textColor">@color/light_main</item>
    </style>

    <style name="Theme_buttonStyle">
        <item name="android:background">@color/light_secondary</item>
        <item name="android:textColor">@color/light_main</item>
    </style>

    <style name="Theme_separate_line">
        <item name="android:background">@color/light_secondary</item>
    </style>

    <style name="Theme_edit_form">
        <item name="android:textColor">@color/light_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>