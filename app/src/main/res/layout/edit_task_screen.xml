<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_secondary">

    // TODO: CONSTRAINT TO TOP WITH PADDING

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/miriadpro"
            android:text="@string/task"
            android:textAlignment="center"
            android:textColor="@color/light_secondary"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <1ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/icontop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_data"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <EditText
            android:id="@+id/form_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/miriadpro"
            android:hint="@string/task_title"
            android:textAlignment="center"
            android:textColorHint="@color/light_main"
            app:flow_verticalAlign="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/form_description"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/miriadpro"
            android:hint="@string/task_description"
            android:textAlignment="center"
            android:textColorHint="@color/light_main"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_title" />

        <TextView
            android:id="@+id/form_start_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/miriadpro"
            android:gravity="center"
            android:text="@string/start_time"
            android:textAlignment="center"
            android:textColor="@color/light_main"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_description" />

        <TextView
            android:id="@+id/form_end_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/miriadpro"
            android:gravity="center"
            android:text="@string/end_time"
            android:textColor="@color/light_main"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/form_start_date"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_end_date">

            <CheckBox
                android:id="@+id/notification_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/miriadpro"
                android:text="@string/notification"
                android:textColor="@color/light_main"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/notification_check"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/cancel_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/miriadpro"
        android:text="@string/cancel"
        app:layout_constraintEnd_toEndOf="@+id/task_data"
        app:layout_constraintTop_toBottomOf="@+id/task_data" />

    <Button
        android:id="@+id/submit_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/miriadpro"
        android:text="@string/submit_task"
        app:layout_constraintStart_toStartOf="@+id/task_data"
        app:layout_constraintTop_toBottomOf="@+id/task_data" />


</androidx.constraintlayout.widget.ConstraintLayout>